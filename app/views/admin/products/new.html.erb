<div class="container mt-5 mb-5">
    <h1>新規商品作成</h1>
    <div class="row mt-4">
      <div class="col-md-6 offset-md-3">
        <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="form-group mb-3">
            <%= f.label :name, Product.human_attribute_name(:name) %>
            <%= f.text_field :name, class: 'form-control', placeholder: '商品名を入力してください' %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :description, Product.human_attribute_name(:description) %>
            <%= f.text_area :description, row: 5, class: 'form-control', placeholder: '商品説明を入力してください' %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :price, Product.human_attribute_name(:price) %>
            <%= f.number_field :price, class: 'form-control', step: 1, min: 0 %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :stock, Product.human_attribute_name(:stock) %>
            <%= f.number_field :stock, class: 'form-control', step: 1, min: 0 %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :img, Product.human_attribute_name(:img) %>
            <%= f.file_field :img, class: 'form-control form-control-file' %>
          </div>
          <%= f.submit '登録する', class: "btn btn-primary mt-5" %>
        <% end %>
      </div>
    </div>
  </div>